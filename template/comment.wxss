.comment-t {
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;

  border-style: solid;
  border-width: 1rpx;
  border-bottom-color: #f2f2f2;
  border-left-color: white;
  border-top-color: white;
  border-right-color: white;
}

.comment-head {
  border-radius: 50rpx;
  border: 2px solid;
}

.comment-detail {
  flex: 1;
  padding-right: 10rpx;
  padding-bottom: 3rpx;
  padding-left: 20rpx;
  padding-top: 3rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

#comment-name {
  font-size: 30rpx;
}

#comment-content {
  padding-right: 20rpx;
  font-size: 25rpx;
}

.comment-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

#good-number {
  padding: 3rpx;
}
.comment-delete{
  padding: 20rpx;
}
.comment-delete text{
  /*background-color: red;*/
  font-size: 30rpx;
  color: red;
  width: 100rpx;
  height: 60rpx;
}