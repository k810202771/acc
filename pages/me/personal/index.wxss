/* pages/personal/index.wxss */
page{
  background: #f5f5f5;
  color: #474747;
  position: absolute;
  left: 0;
  bottom: 0;
  top: 0;
  right: 0;
  font-size: 3vw;
}

.odt_box{
  background: #fff;
  margin: 2vw 0 0 0;
}
.odt{
  padding: 2vw 3vw;
}
.odt-xl{
  height: 10vw;
  line-height: 10vw;
  padding: 0 2vw;
  overflow: hidden;
}
.odt-right{
  float: right;
}
.odt-fuk{
  float: right;
  margin-top:2vw;
  margin-left: 4vw;
  height: 6vw;
  line-height: 6vw;
  color: #ff5636;
  border-radius: 3px;
  border: 1px solid #ff5636;
  padding: 0 3vw;
}
.odt-right-color{
  color: #ff5636;
  overflow: visible;
}
.line{
  height: 1px;
  transform: scaleY(0.5);
  background: #eee;
}
.titleleft{
  width:20vw;
  height: 27vw;
  font-size: 0;
  float: left;
}
.imghead{
  position: relative;
  padding: 2vw;
}
.bottom{
  position: absolute;
  bottom: 2vw;
}
.titleleft image{
  width: 100%;
  height: 100%;
}
.imgtitle{
  font-size: 4vw;
  padding-left: 2vw;
}
.fontmin{
  font-size: 3vw;
  color: #828282;
}