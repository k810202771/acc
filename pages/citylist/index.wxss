page{
  background: #f5f5f5;
  color: #474747;
  font-size: 3.5vw;
}
.title{
  color: #000;
  margin: 5vw 0;
}
.pige{
  padding: 0 8vw;
}
.city_box{
  width: 40vw;
  height: 15vw;
  background: #fff;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  display: inline-block;
}
.city_number{
  font-size: 0.8em;
}
.left{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 5vw;
  margin: auto;
  height: 2rem;
  overflow: visible;
}
.right{
  position: relative;
  font-size: 0;
  width: 14.5vw;
  height: 15vw;
  float: right;
  margin-right: 2vw;
  overflow: visible;
}
.right image{
  width: 100%;
  height: 100%;
}
.cityicon{
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  text-align: center;
  transform: translateY(-50%);
}