/**index.wxss**/
page{
  background: #f5f5f5;
  color: #474747;
}
page .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: -4rpx;
}

page .swiper-pagination-bullet{
  border-radius: 0;
  opacity: 1;
  
}
page .wx-swiper-dot{
    width: 15px;
    display: inline-flex;
    height: 2.5px;
    vertical-align: sub;
    transform: skewX(-45deg);
    background: rgba(255,255,255,0);
    border-radius:0;
    margin: -3px;
}

page .wx-swiper-dot::before{
    content: '';
    background: rgba(255,255,255,0.3);
    flex-grow: 1;
}

page .wx-swiper-dot-active::before{
    content: '';
    background:rgba(255,255,255,0.8);
    flex-grow: 1;
}
.slide-image{
  display: inline-block;
}

.list{
  background: #fff;
  margin-top: 2vw;
  padding: 0 1.5vw;
  font-size: 3.5vw;
}
.fontmin{
  font-size: 2.5vw;
}
.header_title{
  position: relative;
  height: 13vw;
  line-height: 13vw;
}
.linebox{
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  height: 1.4em;
  width: 1px;
  background: #a0a0a0;
}
.listobj view{
  margin: 1vw 0;
}
.listobj image{
  width: 97vw;
  height: 48.5vw;
}
.listobj .tdp{
  height: 1.5em;
  line-height: 1.5em;
  position: relative;
  overflow: visible;
}
.listobj .purchase{
  position: absolute;
  right: 1vw;
  top: 0;
  bottom: 0;
  margin: auto;
  background: #ff2661;
  color: #fff;
  border-radius: 5px;
  padding: 0 2.5vw;
  font-size: 3.2vw;
}
.xline{
  height: 1px;
  transform: scaleY(0.5);
}
.bxbanner{
  text-align:center;
  height:19vw;
  background: #fff;
  position: relative;
  overflow: visible;
  padding: 1vw 0 2vw 0;
  margin-top: 2vw;
}
.bxbanner .box{
  position: absolute;
  top: 3vw;
  left: 8vw;
  height:14vw;
  width: 14vw;
  animation: bxbox 1s;
  animation-iteration-count:infinite;
}
.bxbanner .img{
  width:90vw;
  height:17.8vw;
}
@keyframes bxbox{
  0%{transform: rotateZ(0deg)}
  10%{transform: rotateZ(10deg)}
  20%{transform: rotateZ(0deg)}
  30%{transform: rotateZ(-10deg)}
  40%{transform: rotateZ(0deg)}
  50%{transform: rotateZ(5deg)}
  60%{transform: rotateZ(0deg)}
  70%{transform: rotateZ(-5deg)}
  80%{transform: rotateZ(0deg)}
  100%{transform: rotateZ(0deg)}
}