/* pages/shop/purchase/index.wxss */
page{
  color: #474747;
  font-size: 4vw;
  background: #f5f5f5;
}
.headerbg{
  background: #fff9e6;
  color: #ff5636;
  text-align: center;
  height: 12vw;
  line-height: 12vw;
  font-size: 3.5vw;
}
.fontcolor{
  color: #9d7f51;
}
.cbox{
  padding: 3vw 5vw;
  margin-bottom: 2vw;
  background: #fff;
  position: relative;
}
.orderbox{
  position: relative;
  margin: 2vw 0;
}
.orderleft{
  position: absolute;
  width: 26vw;
  display: inline-block;
  top: 0;
  color: #999999;
}
.orderright{
  margin-left: 26vw;
  width: 63.8vw;
  display: inline-block;
}
.je{
  color: #ff5636;
}
.radio{
  right: 5vw;
  height: 1.3rem;
}
.yjz{
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
}
.zhifutext{
  height: 1.4rem;
  overflow: visible;
}
.qrbutton{
  padding: 2vw;
  box-sizing: border-box;
  background: #ff2661;
  color: #fff;
  text-align: center;
  font-size: 5vw;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}