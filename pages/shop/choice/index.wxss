/* pages/shop/choice/index.wxss */
page{
  background: #f5f5f5;
  color: #474747;
  position: absolute;
  left: 0;
  bottom: 0;
  top: 0;
  right: 0;
  font-size: 3vw;
}
.boxpad{
  padding: 0 5vw;
}
.title{
  font-size: 4vw;
  margin-top: 1vw;
  background: #fff;
  padding-bottom: 2.5vw;
  padding-top: 2.5vw;
}
.picker{
  padding: 2.4vw 10vw 2.4vw 2.4vw;
  max-width: 80vw;
  margin: 1vw;
  display: inline-block;
  box-sizing: border-box;
  border: 1px solid #eee;
  border-radius: 3px;
  word-break:keep-all;
  position: relative;
}
.textright{
  position: absolute;
  right: 2.4vw;
  top: 50%;
  transform: translateY(-50%);
}
.detailDesc{
  position: relative;
  margin-top: 1vw;
  background: #fff;
}
.detailDescbox{
  padding: 2.4vw;
  max-width: 80vw;
  margin: 1vw;
  display: inline-block;
  box-sizing: border-box;
  border: 1px solid #eee;
  border-radius: 3px;
  word-break:keep-all;
}
.detatitle{
  font-size: 4vw;
  height: 10vw;
  line-height: 10vw;
  color: #000;
}
.detacontent{
  display: inline-block;
  margin-bottom: 1.5vw;
}
.line{
  height: 1px;
  transform: scaleY(0.5);
  background: #eee;
}
.activity{
  max-width: 80vw;
  padding: 2.4vw 5vw;
  margin: 1vw;
  display: inline-block;
  box-sizing: border-box;
  border: 1px solid #eee;
  border-radius: 3px;
  /*word-break:keep-all;*/
  position: relative;
}
.activity .zhekou{
  position: absolute;
  top: 0;
  right: 0;
  height: 4vw;
  line-height: 4vw;
  width: 4vw;
  border-radius: 3px;
  text-align: center;
  background: #b6dc79;
  color: #fff;
  overflow: visible;
}
.shopleft{
  height: 13vw;
  width: 60%;
  background: #fff;
  font-size: 4vw;
  line-height: 4.2vw;
  float: left;
  color: #ff5000;
}
.description{
  color: #aaa;
}
.shopvbox{
  position: absolute;
  left: 2vw;
  top: 50%;
  transform: translate3d(0,-50%,0);
}
.shopvbox view{
  overflow: visible;
}
.fontmin{
  font-size: 3vw;
  color: #828282;
  margin-left: 1vw;
}
.fontmin text{
  text-decoration: line-through;
}
.shopright{
  float:right;
  height: 13vw;
  width: 40%;
  background: #ff2661;
  font-size: 5vw;
  color: #fff;
  text-align: center;
  line-height: 13vw;
}
.shopbox{
  position: fixed;
  bottom: 0;
  width: 100%;
}