/* pages/city/index.wxss */
page{
  background: #f5f5f5;
  color: #474747;
  font-size: 3.5vw;
}
.purchase{
  position: absolute;
  right: 1vw;
  bottom: 1vw;
  margin: auto;
  background: #536267;
  color: #fff;
  border-radius: 5px;
  padding: 0 2.5vw;
}
.textbottom{
  position: absolute;
  bottom: 0;
}
.fontmin{
  font-size: 3vw;
}
.header{
  position: fixed; 
  width: 100%;
  top: 0;
  z-index: 99;
}
.headbg{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 24.5vw;
  background: #f5f5f5;
  z-index: -1;
}
.city{
  height: 10vw;
  line-height: 10vw;
  background: #fff;
  text-align: center;
}
.header_title{
  position: relative;
  height: 13vw;
  line-height: 13vw;
  padding: 0 1.5vw;
  margin-top: 1.5vw;
  background: #fff;
}
.linebox{
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  height: 1.4em;
  width: 1px;
  background: #a0a0a0;
}
.list{
  margin-top: 24.5vw;
  background: #fff;
  padding: 0 1.5vw;
  font-size: 3.5vw;
}
.list .left{
  width:20vw;
  height: 27vw;
  font-size: 0;
  float: left;
}
.list .right{
  width:75vw;
  height: 27vw;
  font-size: 4vw;
  position: relative;
  padding:0 0 0 2vw;
}
.list image{
  width:100%;
  height: 100%;
}
.xline{
  height: 1px;
  transform: scaleY(0.5);
}