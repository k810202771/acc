page{
  color: #fff;
  background: #3a4050;
  text-align: center;
  font-size: 0;
}
.scroll{
  overflow: scroll;
  position: absolute;
  top: 12vw;
  bottom: 0;
  left: 0;
  right: 0;
  padding-bottom: 10vw;
}
.headerbg{
  background: #3a4050;
  color: #fff;
  text-align: center;
  height: 12vw;
  line-height: 12vw;
  font-size: 3.5vw;
}
.card{
  text-align: center;
  width: 80vw;
  height: 35.7vw;
  margin: 5vw 0 28vw 0;
  overflow: visible;
  position: relative;
}
.card .titel{
  position: absolute;
  left: 0;
  right: 0;
  bottom: -16vw;
  font-size: 3.5vw;
  line-height: 6.5vw;
}
.card .button{
  position: absolute;
  left: 0;
  right: 0;
  padding: 1vw;
  width: 30vw;
  margin: auto;
  font-size: 3.5vw;
  bottom: -26vw;
  color: #fff;
  border-radius: 90px;
  background: #ccb89f; /*cbcbcb*/
}
