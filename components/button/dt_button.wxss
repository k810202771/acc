/* components/button/dt_button.wxss */
.button{
  background: #fff;
  width: 100%;
  height: 100%;
  border-radius: 4px;
  font-size: 4vw;
  box-sizing: border-box;
  position: relative;
}
.text{
  position: absolute;
  line-height:0;
  top: 50%;
  left: 4vw;
  transform: translate3d(0,-50%,0);
}
@keyframes animation{
  0%{
    transform: scale3d(1,1,1)
  }
  50%{
    transform: scale3d(.9,.9,1)
  }
  90%{
    transform: scale3d(1.1,1.1,1)
  }
  100%{
    transform: scale3d(1,1,1)
  }
}